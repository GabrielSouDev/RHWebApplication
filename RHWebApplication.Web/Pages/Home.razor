@inject NavigationManager NavigationManager
@inject CustomAuthStateProvider AuthStateProvider
@page "/Home"
@attribute [Authorize]
<PageTitle>Home</PageTitle>
<AuthorizeView>
    <Authorized>
        <MudText Typo="Typo.h6" Class="d-flex justify-center align-center">Bem-vindo, @UserInfo.UserName!</MudText>
    </Authorized>
    <NotAuthorized>
        @{
            NavigationManager.NavigateTo("/Login");
        }
    </NotAuthorized>
</AuthorizeView>

@code{
    [CascadingParameter]
    public UserInfo? UserInfo { get; set; }
}