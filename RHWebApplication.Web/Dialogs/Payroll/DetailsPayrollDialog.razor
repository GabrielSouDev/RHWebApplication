@namespace RHWebApplication.Web.Dialogs

<MudDialog Class="d-flex align-center justify-center mud-width-full">
	<DialogContent>
		<MudGrid Style="padding-left:25px;">

			<MudItem xs="8"/>
			<MudItem xs="4">
				<MudText Align="Align.End" Typo="Typo.h6">Folha de Pagamento</MudText>
			</MudItem>

			<MudItem Style="@_gridStyle" xs="12">
				<MudText>Razão social: razão social..</MudText>
				<MudText>CNPJ: cnpj..</MudText>
			</MudItem>

			<MudItem Style="@_gridStyle" xs="12">
				<MudText>ID: @Payroll.Id	 -	 Nome: @Payroll.EmployeeName	 -	 Cargo: @Payroll.JobTitle </MudText>
			</MudItem>

			<MudItem Style="@_gridStyle" xs="1">
				<MudText Align="Align.Center" Style="@_descriptionStyle">Cod.</MudText>
				<MudText>0001</MudText>
				<MudText>0020</MudText>
				<MudText>0021</MudText>
				<MudText>0018</MudText>
				<MudText>0010</MudText>
				<MudText>1600</MudText>
				<MudText>0561</MudText>

			</MudItem>
			<MudItem Style="@_gridStyle" xs="5">
				<MudText Align="Align.Center" Style="@_descriptionStyle">Descrição</MudText>
				<MudText>Salario Base</MudText>
				<MudText>Insalubridade</MudText>
				<MudText>Periculosidade</MudText>
				<MudText>Hora Extra</MudText>
				<MudText>Comissão</MudText>
				<MudText>INSS</MudText>
				<MudText>IRRF</MudText>

			</MudItem>
			<MudItem Style="@_gridStyle" xs="2">
				<MudText Align="Align.Center" Style="@_descriptionStyle">Referencia</MudText>
				<MudText>30 dias</MudText>
				<MudText>@(UnhealthyLevel[Payroll.UnhealthyLevel])</MudText>
				@if (Payroll.IsPericulosity)
				{
					<MudText>30%</MudText>
								} 
				else
				{
				<MudText></MudText>
				}	
				<MudText>@((int)Payroll.OverTime) : @((int)((@Payroll.OverTime - (int)@Payroll.OverTime) * 60))</MudText>
				<MudText>- - -</MudText>
				<MudText>- - -</MudText>

				
			</MudItem>
			<MudItem Style="@_gridStyle" xs="2">
				<MudText Align="Align.Center" Style="@_descriptionStyle">Proventos</MudText>
				<MudText>@Payroll.BaseSalary</MudText>
				<MudText>@Payroll.UnhealthyValue</MudText>
				<MudText>@Payroll.PericulosityValue</MudText>
				<MudText>@Payroll.OverTimeAditionals</MudText>
				<MudText>@Payroll.Commission</MudText>
				<MudText>- - -</MudText>
				<MudText>- - -</MudText>

			</MudItem>
			<MudItem Style="@_gridStyle" xs="2">
				<MudText Align="Align.Center" Style="@_descriptionStyle">Descontos</MudText>
				<MudText>- - -</MudText>
				<MudText>- - -</MudText>
				<MudText>- - -</MudText>
				<MudText>- - -</MudText>
				<MudText>- - -</MudText>
				<MudText>@Payroll.INSSDeduction</MudText>
				<MudText>@Payroll.IRRFDeduction</MudText>

			</MudItem>
			
			<MudItem Style="@_gridStyle" xs="8"></MudItem>
			<MudItem Style="@_gridStyle" xs="2">@Payroll.Gross</MudItem>
			<MudItem Style="@_gridStyle" xs="2">@Payroll.Deductions</MudItem>

			<MudItem Style="@_gridStyle" xs="8"></MudItem>
			<MudItem Style="@_gridStyle" xs="2"></MudItem>
			<MudItem Style="@_gridStyle" xs="2">@Payroll.Net</MudItem>

			<MudItem Style="@_gridStyle" xs="12"></MudItem>
			
		</MudGrid>
	</DialogContent>
	
	<DialogActions>
		<MudButton OnClick="Close" Color="Color.Primary">Fechar</MudButton>
	</DialogActions>
</MudDialog>

@code {
	[CascadingParameter]
	MudDialogInstance MudDialog { get; set; }
	[Parameter]
	public PayrollResponse Payroll { get; set; }

	private Dictionary
	<int, string> UnhealthyLevel = new()
													{{ 0, "0%" },
													 { 1, "10%" },
													 { 2, "20%" },
													 { 3, "40%" }};

	private string _descriptionStyle = "font-weight:bold; border-bottom: 2px solid black;";
	private string _gridStyle = "padding-left: 0; padding-top: 0; border: 2px solid black;";
	private string _lorem = "Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard.";

	private void Close()
	{
		MudDialog.Close(DialogResult.Ok(Payroll));
	}
}