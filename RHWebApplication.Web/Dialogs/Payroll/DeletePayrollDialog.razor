@namespace RHWebApplication.Web.Dialogs

<MudDialog>
	<TitleContent>Are you sure to delete @Payroll.EmployeeName - @Payroll.CreationDate Payroll?</TitleContent>
	<DialogActions>
		<MudButton OnClick="Cancel" Color="Color.Error">Cancel</MudButton>
		<MudButton OnClick="Save" Color="Color.Primary">Yes</MudButton>
	</DialogActions>
</MudDialog>

@code{
	[CascadingParameter]
	MudDialogInstance MudDialog { get; set; }
	[Parameter] 
	public PayrollResponse Payroll { get; set; }

	private void Save()
	{
		MudDialog.Close(DialogResult.Ok(Payroll));
	}

	private void Cancel()
	{
		MudDialog.Cancel();
	}
}