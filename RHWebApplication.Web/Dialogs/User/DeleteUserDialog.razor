@namespace RHWebApplication.Web.Dialogs

<MudDialog>
	<TitleContent>Are you sure to delete @login?</TitleContent>
	<DialogActions>
		<MudButton OnClick="Cancel" Color="Color.Error">Cancel</MudButton>
		<MudButton OnClick="Save" Color="Color.Primary">Yes</MudButton>
	</DialogActions>
</MudDialog>

@code {
	[CascadingParameter]
	MudDialogInstance MudDialog { get; set; }
	[Parameter]
	public string login { get; set; }

	private void Save()
	{
		MudDialog.Close(DialogResult.Ok(login));
	}

	private void Cancel()
	{
		MudDialog.Cancel();
	}
}