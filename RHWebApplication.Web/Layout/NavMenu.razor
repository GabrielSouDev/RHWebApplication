                <MudNavLink IconColor="Color.Tertiary" Href="/UserList">User List</MudNavLink>
            </MudNavGroup>

            <MudNavGroup IconColor="Color.Tertiary" Title="Job Titles" Icon="@Icons.Material.Filled.Anchor" Expanded="false">
