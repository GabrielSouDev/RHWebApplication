        if(UserInfo.Role != "Employee")
        {
            <MudNavLink IconColor="Color.Tertiary" Icon="@Icons.Material.Filled.Payments" Href="/PayrollRegister">Register a payroll</MudNavLink>

            <MudNavGroup IconColor="Color.Tertiary" Title="Users" Icon="@Icons.Material.Filled.People" Expanded="false">
