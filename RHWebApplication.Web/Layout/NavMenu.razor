<MudNavMenu Color="Color.Primary" Class="mud-width-full mt-4">

    <MudNavLink IconColor="Color.Tertiary" Href="/Home" Icon="@Icons.Material.Filled.Home">Home</MudNavLink>
    <MudNavLink IconColor="Color.Tertiary" Icon="@Icons.Material.Filled.Payments" Href="/PayrollList">Payrolls</MudNavLink>
    @{
        if(UserInfo.Role != "Employee")
        {
            <MudNavLink Icon="@Icons.Material.Filled.People" IconColor="Color.Tertiary" Href="/UserList">Users</MudNavLink>
            <MudNavLink Icon="@Icons.Material.Filled.Anchor" IconColor="Color.Tertiary" Href="/JobList">jobTitles</MudNavLink>

            <MudNavGroup IconColor="Color.Tertiary" Title="Charts" Icon="@Icons.Material.Filled.AreaChart" Expanded="false">
                <MudNavLink IconColor="Color.Tertiary" Href="/">Chart1</MudNavLink>
                <MudNavLink IconColor="Color.Tertiary" Href="/">Chart2</MudNavLink>
            </MudNavGroup>
        }
    }
</MudNavMenu>

@code{
    [CascadingParameter]
    public UserInfo UserInfo { get; set; } = new();
}
