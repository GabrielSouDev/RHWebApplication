    <MudNavLink IconColor="Color.Tertiary" Href="/Home" Icon="@Icons.Material.Filled.Home">Home</MudNavLink>

    @{
        if(UserInfo.Role == "Staff")
        {
            <MudNavLink IconColor="Color.Tertiary" Icon="@Icons.Material.Filled.PeopleAlt" Href="/CompanyRegister">Register a Company</MudNavLink>
        }
    }
        <MudNavLink IconColor="Color.Tertiary" Icon="@Icons.Material.Filled.Payments" Href="/PayrollList">Payroll List</MudNavLink>
